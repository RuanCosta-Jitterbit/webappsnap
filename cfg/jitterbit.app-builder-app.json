                {
                    "name": "",
                    "steps": [
                        {
                            "name": "Email",
                            "type": "text",
                            "locator": "placeholder",
                            "selector": "Email",
                            "value": "LOGIN"
                        },
                        {
                            "name": "Enter",
                            "type": "press",
                            "value": [
                                "Enter"
                            ]
                        },
                        {
                            "name": "Password",
                            "type": "text",
                            "locator": "placeholder",
                            "selector": "Password",
                            "value": "PASSWORD"
                        },
                        {
                            "name": "Enter",
                            "type": "press",
                            "value": [
                                "Enter"
                            ]
                        },
                        {
                            "name": "for app load",
                            "type": "wait",
                            "value": 20000
                        },
                        {
                            "name": "dashboard",
                            "type": "snap"
                        },
                        {
                            "name": "header",
                            "type": "snap",
                            "locator": "css",
                            "selector": "body > div.app-layout > header"
                        },
                        {
                            "name": "header menu",
                            "type": "snap",
                            "locator": "css",
                            "selector": "body > div.app-layout > header > div > div > div:nth-child(2)"
                        },
                        {
                            "name": "custom menu",
                            "type": "snap",
                            "locator": "css",
                            "selector": "#wrapper > section > md-sidenav > div > md-content > ul:nth-child(3)"
                        },
                        {
                            "name": "open menu",
                            "type": "click",
                            "locator": "css",
                            "selector": "[aria-label='Account Bar']"
                        },
                        {
                            "name": "blur email",
                            "type": "style",
                            "value": "#menu_container_1 > div > div.accountbar-in.layout-padding > button > span.md-truncate > small { filter: blur(5px); }"
                        },
                        {
                            "name": "account dropdown box",
                            "type": "snap",
                            "locator": "css",
                            "selector": "[class='account-dropdown-box']"
                        },
                        {
                            "comment": "click anywhere off menu to close it",
                            "name": "",
                            "type": "click",
                            "locator": "css",
                            "selector": "body"
                        },
                        {
                            "name": "select employees module",
                            "type": "click",
                            "locator": "css",
                            "selector": "#wrapper > section > md-sidenav > div >> button >> 'Employees'"
                        },
                        {
                            "name": "for load",
                            "type": "wait",
                            "value": 10000
                        },
                        {
                            "name": "employees module",
                            "type": "snap"
                        },
                        {
                            "name": "new employee",
                            "type": "click",
                            "locator": "css",
                            "selector": "#Module_AddNew"
                        },
                        {
                            "comment": "move cursor away from button to avoid snapping tool-tip",
                            "name": "to center",
                            "type": "move",
                            "locator": "css",
                            "selector": "body"
                        },
                        {
                            "name": "for load",
                            "type": "wait",
                            "value": 10000
                        },
                        {
                            "name": "new employee",
                            "type": "snap",
                            "viewport": {
                                "width": 992,
                                "height": 920
                            }
                        },
                        {
                            "name": "enable as app user",
                            "type": "click",
                            "locator": "getbytext",
                            "selector": "Enable as App User"
                        },
                        {
                            "name": "identity management",
                            "type": "snap",
                            "locator": "css",
                            "selector": "#general > form > div.container-fluid.paddingua20 > div:nth-child(2)",
                            "viewport": {
                                "width": 992,
                                "height": 1110
                            }
                        }
                    ]
                }
            ]
        }
    ]
